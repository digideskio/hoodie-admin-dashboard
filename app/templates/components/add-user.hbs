<h2>Add new user</h2>
<form class="addUser" {{action 'addUser' on="submit"}}>
  <fieldset>
    <div class="group">
      {{#validation-message errors=errors.model.test}}
        {{input type="text" class="form-control" placeholder="Test" required="" value=test disabled=disableAdd}}
      {{/validation-message}}
      <label for="">New user's name</label>
      {{#validation-message errors=errors.model.newUserName}}
        {{input type="text" class="form-control username" placeholder="User name" required="" value=newUserName disabled=disableAdd}}
      {{/validation-message}}
      <!-- -->
      <label for="">New user's password</label>
      {{#validation-message errors=errors.model.newUserPassword}}
        {{input type="text" class="form-control password" placeholder="Password" required="" value=newUserPassword disabled=disableAdd}}
      {{/validation-message}}
      <!-- -->
      <button class="submit btn ok" type="submit" disabled={{disableAdd}}>Add user</button>
      <span class="submitMessage">{{{submitMessage}}}</span>
    </div>
  </fieldset>
</form>